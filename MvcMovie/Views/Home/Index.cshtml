@model MvcMovie.Models.HomeModel
@{
    ViewData["Title"] = "Home Page";
    ViewBag.ShowHeader = true;
}

@{
    ViewBag.Title = "Home";
}

<div class="container mt-5 align-items-center">
    <div class="row">
        <!-- Large Welcome Section -->
        <div class="col-md-7 d-flex flex-column justify-content-center pt-5">
            <h1 class="display-4 mb-3">Welcome</h1>
            <p class="lead mb-5">Get started with Better Reads with the options to the right.</p>
        </div>

        <!-- Card Column Section -->
        <div class="col-md-5 mt-5">
            <div class="row g-1">
                <div class="col-md-12 mb-2">
                    <a href="https://betterreads-temp-527.auth.us-east-1.amazoncognito.com/login?response_type=code&client_id=6aomva7s8ai8enq5uov9q5ff0i&redirect_uri=https://localhost:7030/Home/MyUser" class="card bg-light text-center square-card text-decoration-none shadow-sm rounded">
                        <div class="card-body d-flex align-items-center justify-content-center py-2">
                            Login
                        </div>
                    </a>
                </div>
                <div class="col-md-12 mb-2">
                    <a href="@Url.Action("BrowseArea", "Home")" class="card px-2 bg-light text-center square-card text-decoration-none shadow-sm rounded">
                        <div class="card-body d-flex align-items-center justify-content-center py-2">
                            Browse Area
                        </div>
                    </a>
                </div>
                <div class="col-md-12 mb-2">
                    <a href="@Url.Action("MyUser", "Home")" class="card bg-light text-center square-card text-decoration-none shadow-sm rounded">
                        <div class="card-body d-flex align-items-center justify-content-center py-2">
                            User
                        </div>
                    </a>
                </div>
                <div class="col-md-12 mb-2">
                    <a href="@Url.Action("Book", "Home")" class="card bg-light text-center square-card text-decoration-none shadow-sm rounded">
                        <div class="card-body d-flex align-items-center justify-content-center py-2">
                            Book
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
